<%#TODO Load up all users and then have the possibility to change the role of the class%>

<form action="/users/edit" method="post">
  <% @users.each do |user| %>
    <% if user['rolename'] == 'admin' %>
      <%next %>
    <%end %>
    <label>
      <%=h(user['username']) %>
      <br/>
      <input list="roles" type="text" value='<%=user['rolename']%>' name='<%=user['user_id'] %>'>
      <br/>
    </label>
  <% end %>
  <label>
    <input type="submit">
  </label>
</form>

<datalist id="roles">
  <%@roles.each do |role| %>
    <option value="<%= role['rolename']%>"></option>
    <%p role['rolename'] %>
  <% end %>
</datalist>
